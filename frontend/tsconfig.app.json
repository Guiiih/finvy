{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "../backend/types/**/*.ts"],
  "exclude": ["src/**/__tests__/*", "src/**/*.test.ts"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node", "vitest/globals", "vite/client"], // <-- Verifique se "vite/client" estÃ¡ aqui
    "paths": {
      "@/*": ["./src/*"],
      "@backendTypes/*": ["../backend/types/*"]
    }
  }
}