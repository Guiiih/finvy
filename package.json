{
  "type": "module",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vercel/node": "^5.3.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "supabase": "^2.30.4"
  },
  "scripts": {
    "test": "npm test --workspace backend",
    "lint:frontend": "npm run lint --workspace frontend",
    "format:frontend": "npm run format --workspace frontend",
    "lint:backend": "eslint \"api/**/*.ts\" \"backend/**/*.ts\" --fix",
    "format:backend": "prettier --write \"api/**/*.ts\" \"backend/**/*.ts\"",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "format": "npm run format:frontend && npm run format:backend"
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
}
